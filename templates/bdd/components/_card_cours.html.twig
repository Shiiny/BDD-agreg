{% if courses is defined %}
    <div class="card">
        <div class="card-body">
            <h2 class="mb-3">Recherche : <span class="small text-muted">{{ data }}</span></h2>
            {% for cours in courses %}
                <p>
                    <button class="btn btn-outline-secondary" type="button" data-toggle="collapse" data-target="#cours_{{ cours.id }}" aria-expanded="false">{{cours.title}}</button>
                </p>
                <div class="collapse multi-collapse mb-3" id="cours_{{ cours.id }}">
                    <div class="card card-body">
                        <div class="tags">
                            <p>
                                {% for formation in cours.formations %}
                                    <span class="badge badge-pill badge-dark">{{ formation.code }}</span>
                                {% endfor %}
                            </p>
                        </div>
                        <table class="table table-striped">
                        {% for teacher in cours.teachers %}
                            <tr>
                                <td>
                                    <!--<a href="#" class="list-item-link" {% if teacher.discipline.categorie is defined %}onclick="window.open('ms-excel:ofe|u|//NAS-AGREG/commun/Enseignants_Services/Services_{{ teacher.discipline.categorie }}/{{ teacher.nameFormated }}_fiche_service.xlsx')"{% endif %}>{{ teacher.name }}</a>-->
                                    <a class="list-item-link" href="#" {% if teacher.discipline.categorie is defined %}onclick="window.open('ms-excel:ofe|u|C:/Users/ourya/Desktop/Lab/Enseignants_Services/Services_{{ teacher.discipline.categorie }}/{{ teacher.nameFormated }}_fiche_service.xlsx')"{% endif %}>{{ teacher.name }}</a>
                                </td>
                                <td>{{ cours.hours }}</td>
                                <td><a class="list-item-link" href="https://moodlecollegesevigne.fr/course/view.php?id={{ cours.idmoodle }}" target="_blank"><i class="fas fa-eye"></i></a></td>
                            </tr>
                        {% endfor %}
                        </table>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}

