{% if teacher is defined %}
    <div class="card">
        <div class="card-head">
            <div class="card-head-user"><i class="fas fa-user"></i></div>
            <h1>{{ teacher.firstname }} {{ teacher.lastname }}</h1>
            <div class="card-head-discipline">
                {% if teacher.discipline is not null %}
                <span class="card-head-tag tag-{{ teacher.discipline.code }}">{{ teacher.discipline.title }}</span>
                {% endif %}
            </div>
            <ul>
                <li>TÃ©l : {{ teacher.phone }}</li>
                <li>Email : <a href="mailto:{{ teacher.email }}">{{ teacher.email }}</a></li>
            </ul>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Cours</th>
                        <th style="width: 10%">Heures</th>
                    </tr>
                </thead>
                <tbody>
                {% for cours in teacher.cours %}
                    <tr>
                        <td><a href="https://moodlecollegesevigne.fr/course/view.php?id={{ cours.idmoodle }}">{{ cours.title }}</a></td>
                        <td>{{ cours.hours }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="card-btn">
                <!--<a href="#" onclick="window.open('ms-excel:ofe|u|//NAS-AGREG/commun/Enseignants_Services/Services_{{ teacher.discipline }}/{{ teacher.lastname }}_fiche_service.xlsx')" class="btn btn-primary">Voir la fiche</a>-->
                <a href="#" onclick="window.open('ms-excel:ofe|u|C:/Users/ourya/Desktop/Lab/Enseignants_Services/Services_{{ teacher.discipline.categorie }}/{{ teacher.nameFormated }}_fiche_service.xlsx')" class="btn btn-primary">Voir la fiche</a>
            </div>
        </div>
    </div>
{% endif %}

