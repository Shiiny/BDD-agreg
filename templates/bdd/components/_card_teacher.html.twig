{% if teacher is defined %}
    {{ dump(teacher) }}
    <div class="card">
        <div class="card-head">
            <div class="card-head-user"><i class="fas fa-user"></i></div>
            <h2>{{ teacher.firstname }} {{ teacher.lastname }}</h2>
            <div class="card-head-discipline">
                {% if teacher.discipline is defined %}
                    <span class="card-head-tag tag-{{ teacher.discipline.code }}">{{ teacher.discipline.title }}</span>
                {% endif %}
            </div>
            <ul>
                <li>TÃ©l : {{ teacher.phone }}</li>
                <li>Email : <a href="mailto:{{ teacher.email }}">{{ teacher.email }}</a></li>
            </ul>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Cours</th>
                        <th style="width: 10%">Heures</th>
                    </tr>
                </thead>
                <tbody>
                {% for c in teacher.cours %}

                    <tr>
                        <td><a class="list-item-link" href="https://moodlecollegesevigne.fr/course/view.php?id={{ c.idmoodle }}">{{ c.title }}</a></td>
                        <td>{{ c.hours }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
