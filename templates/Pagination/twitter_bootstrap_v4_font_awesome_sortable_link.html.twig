<a class="sort-item-link" {% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}>
    <span>
        {% if app.request.get('sort') == key %}
            {% if app.request.get('direction') == 'desc' %}
                <i class="fa fa-sort-down"></i>
            {% else %}
                <i class="fa fa-sort-up"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort"></i>
        {% endif %}
    </span>
    {{ title }}
</a>
